@{
    ViewData["Title"] = "Tools Catalog";
}

    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }
        header {
            background-color: #007bff;
            color: white;
            padding: 20px;
            text-align: center;
        }
        .container {
            padding: 20px;
        }
        .tools-category {
            margin-bottom: 30px;
        }
        .tools-category h2 {
            color: #333;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
        }
        .tool-item {
            display: flex;
            align-items: center;
            background: white;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .tool-item img {
            max-width: 150px;
            height: auto;
            margin-right: 20px;
        }
        .tool-info {
            padding: 10px;
        }
        .tool-info h3 {
            margin: 0;
            font-size: 1.2em;
            color: #007bff;
        }
        .tool-info p {
            margin: 5px 0;
            color: #555;
        }
        footer {
            text-align: center;
            padding: 20px;
            background-color: #007bff;
            color: white;
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>


    <h1>Spray Catalog</h1>
    <p>Explore our wide range of sprays for all your needs</p>

<div class="container">
    <!-- Hand Tools Category -->
    <div class="tools-category">
        <div class="tool-item">
            <img src="https://media.witglobal.net/source/eshop/stmedia/0100/images/std.lang.all/resolutions/category/576px/170494.jpg" 
                 alt="brake cleaner">
            <div class="tool-info">
                <h3>Brake Cleaner</h3>
            </div>
        </div>
        <div class="tool-item">
            <img src="https://media.wd40.bg/app/uploads/2021/07/02142645/WD40_MULTI_USE_PRODUCT_RANGE-640x640.png.webp" 
                 alt="wd-40">
            <div class="tool-info">
                <h3>WD-40</h3>
            </div>
        </div>
        <div class="tool-item">
            <img src="https://eshop.wuerth.bg/images/thumbs/0011094_hhs-grease-polusintetina-bla-smazka-v-sprej-s-ptfe_600.webp"
                 alt="grease">
            <div class="tool-info">
                <h3>Grease</h3>
            </div>
        </div>
        <div class="tool-item">
            <img src="https://media.witglobal.net/source/eshop/stmedia/0100/images/std.lang.all/resolutions/category/576px/2161335.jpg" 
                 alt="copper">
            <div class="tool-info">
                <h3>Copper CU 800</h3>
            </div>
        </div>
    </div>
    
</div>

<footer>
    <p>&copy; 2025 Tools Catalog Inc. All rights reserved.</p>
</footer>

